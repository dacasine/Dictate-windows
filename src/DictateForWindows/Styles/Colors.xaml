<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dictate brand colors -->
    <Color x:Key="DictatePrimaryColor">#0078D4</Color>
    <Color x:Key="DictateSecondaryColor">#106EBE</Color>
    <Color x:Key="DictateAccentColor">#0063B1</Color>
    <Color x:Key="DictateRecordingColor">#E81123</Color>
    <Color x:Key="DictatePausedColor">#FF8C00</Color>
    <Color x:Key="DictateSuccessColor">#107C10</Color>
    <Color x:Key="DictateWarningColor">#FF8C00</Color>
    <Color x:Key="DictateErrorColor">#E81123</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="DictatePrimaryBrush" Color="{StaticResource DictatePrimaryColor}"/>
    <SolidColorBrush x:Key="DictateSecondaryBrush" Color="{StaticResource DictateSecondaryColor}"/>
    <SolidColorBrush x:Key="DictateAccentBrush" Color="{StaticResource DictateAccentColor}"/>
    <SolidColorBrush x:Key="DictateRecordingBrush" Color="{StaticResource DictateRecordingColor}"/>
    <SolidColorBrush x:Key="DictatePausedBrush" Color="{StaticResource DictatePausedColor}"/>
    <SolidColorBrush x:Key="DictateSuccessBrush" Color="{StaticResource DictateSuccessColor}"/>
    <SolidColorBrush x:Key="DictateWarningBrush" Color="{StaticResource DictateWarningColor}"/>
    <SolidColorBrush x:Key="DictateErrorBrush" Color="{StaticResource DictateErrorColor}"/>

    <!-- Prompt chip colors -->
    <Color x:Key="PromptDefaultColor">#0078D4</Color>
    <Color x:Key="PromptQueuedColor">#107C10</Color>
    <Color x:Key="PromptInstantColor">#744DA9</Color>
    <Color x:Key="PromptAddColor">#767676</Color>

    <SolidColorBrush x:Key="PromptDefaultBrush" Color="{StaticResource PromptDefaultColor}"/>
    <SolidColorBrush x:Key="PromptQueuedBrush" Color="{StaticResource PromptQueuedColor}"/>
    <SolidColorBrush x:Key="PromptInstantBrush" Color="{StaticResource PromptInstantColor}"/>
    <SolidColorBrush x:Key="PromptAddBrush" Color="{StaticResource PromptAddColor}"/>

</ResourceDictionary>
