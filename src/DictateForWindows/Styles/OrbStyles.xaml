<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Orb dark palette -->
    <Color x:Key="OrbBackgroundColor">#0A0A0A</Color>
    <Color x:Key="OrbGlowColor">#FFFFFF</Color>
    <Color x:Key="OrbStrokeColor">#FFFFFF</Color>
    <Color x:Key="OrbAccentIdleColor">#0078D4</Color>
    <Color x:Key="OrbAccentRecordingColor">#E81123</Color>
    <Color x:Key="OrbAccentPausedColor">#FF8C00</Color>
    <Color x:Key="OrbAccentProcessingColor">#FFFFFF</Color>
    <Color x:Key="OrbTextPrimaryColor">#F5F5F5</Color>
    <Color x:Key="OrbTextSecondaryColor">#999999</Color>
    <Color x:Key="PromptLensBackgroundColor">#1A1A1A</Color>
    <Color x:Key="ContextPanelBackgroundColor">#0D0D0D</Color>
    <Color x:Key="ContextActiveColor">#10B981</Color>
    <Color x:Key="ContextDisabledColor">#EF4444</Color>

    <!-- Orb brushes -->
    <SolidColorBrush x:Key="OrbBackgroundBrush" Color="{StaticResource OrbBackgroundColor}" Opacity="0.85"/>
    <SolidColorBrush x:Key="OrbGlowBrush" Color="{StaticResource OrbGlowColor}" Opacity="0.1"/>
    <SolidColorBrush x:Key="OrbStrokeBrush" Color="{StaticResource OrbStrokeColor}" Opacity="0.1"/>
    <SolidColorBrush x:Key="OrbAccentIdleBrush" Color="{StaticResource OrbAccentIdleColor}"/>
    <SolidColorBrush x:Key="OrbAccentRecordingBrush" Color="{StaticResource OrbAccentRecordingColor}"/>
    <SolidColorBrush x:Key="OrbAccentPausedBrush" Color="{StaticResource OrbAccentPausedColor}"/>
    <SolidColorBrush x:Key="OrbAccentProcessingBrush" Color="{StaticResource OrbAccentProcessingColor}"/>
    <SolidColorBrush x:Key="OrbTextPrimaryBrush" Color="{StaticResource OrbTextPrimaryColor}"/>
    <SolidColorBrush x:Key="OrbTextSecondaryBrush" Color="{StaticResource OrbTextSecondaryColor}"/>
    <SolidColorBrush x:Key="PromptLensBackgroundBrush" Color="{StaticResource PromptLensBackgroundColor}" Opacity="0.9"/>
    <SolidColorBrush x:Key="ContextPanelBackgroundBrush" Color="{StaticResource ContextPanelBackgroundColor}" Opacity="0.8"/>

    <!-- Orb typography: Segoe UI Variable Light -->
    <Style x:Key="OrbPrimaryTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource OrbTextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CharacterSpacing" Value="20"/>
    </Style>

    <Style x:Key="OrbSecondaryTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource OrbTextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="CharacterSpacing" Value="20"/>
    </Style>

    <Style x:Key="OrbTimerTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource OrbTextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CharacterSpacing" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Prompt lens button style -->
    <Style x:Key="PromptLensButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PromptLensBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource OrbTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource OrbStrokeBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="MinWidth" Value="48"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="CharacterSpacing" Value="20"/>
    </Style>

    <!-- Context panel style -->
    <Style x:Key="ContextPanelBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ContextPanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource OrbStrokeBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- Active prompt brush -->
    <SolidColorBrush x:Key="PromptActiveBrush" Color="{StaticResource ContextActiveColor}"/>

    <!-- Context card active border -->
    <SolidColorBrush x:Key="ContextActiveBrush" Color="{StaticResource ContextActiveColor}"/>
    <SolidColorBrush x:Key="ContextDisabledBrush" Color="{StaticResource ContextDisabledColor}"/>

    <!-- Model lens subtle style -->
    <Style x:Key="ModelLensSubtleButtonStyle" BasedOn="{StaticResource PromptLensButtonStyle}" TargetType="Button">
        <Setter Property="Opacity" Value="0.35"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

</ResourceDictionary>
