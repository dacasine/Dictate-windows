<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DictateForWindows.Controls.TargetAppCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DictateForWindows.Controls"
    Width="58"
    Height="58">

    <Button
        x:Name="AppButton"
        Background="{StaticResource PromptLensBackgroundBrush}"
        BorderBrush="{StaticResource OrbStrokeBrush}"
        BorderThickness="1"
        CornerRadius="10"
        Padding="2"
        Width="52"
        Height="52"
        Click="OnAppClick">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="2">
            <FontIcon
                x:Name="AppIcon"
                FontFamily="Segoe Fluent Icons"
                FontSize="18"
                Foreground="{StaticResource OrbTextPrimaryBrush}"
                HorizontalAlignment="Center"/>
            <TextBlock
                x:Name="AppNameText"
                Style="{StaticResource OrbSecondaryTextStyle}"
                FontSize="8"
                HorizontalAlignment="Center"
                TextTrimming="CharacterEllipsis"/>
        </StackPanel>
    </Button>

</UserControl>
