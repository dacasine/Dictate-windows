<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DictateForWindows.Controls.ContextPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DictateForWindows.Controls"
    MaxWidth="350">

    <Border Style="{StaticResource ContextPanelBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock
                Grid.Row="0"
                Text="Selected text"
                Style="{StaticResource OrbSecondaryTextStyle}"
                Margin="0,0,0,4"/>

            <!-- Context text -->
            <ScrollViewer
                Grid.Row="1"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                MaxHeight="100">
                <TextBlock
                    x:Name="ContextText"
                    Text="{x:Bind ContextString, Mode=OneWay}"
                    Style="{StaticResource OrbPrimaryTextStyle}"
                    TextWrapping="Wrap"
                    IsTextSelectionEnabled="True"/>
            </ScrollViewer>
        </Grid>
    </Border>

</UserControl>
