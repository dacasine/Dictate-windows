<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DictateForWindows.Views.OnboardingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Welcome to Dictate">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="48">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MaxWidth="500"
            Spacing="24">

            <TextBlock
                Text="Welcome to Dictate for Windows"
                FontSize="28"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>

            <TextBlock
                TextWrapping="Wrap"
                TextAlignment="Center"
                FontSize="14">
                This is a simplified onboarding screen for testing.
                The app is launching successfully!
            </TextBlock>

            <Button
                x:Name="FinishButton"
                Content="Get Started"
                Click="OnFinishClick"
                HorizontalAlignment="Center"
                Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
